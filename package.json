{
    "name": "places-we-ate",
    "private": true,
    "version": "1.0.0",
    "description": "Fun app project for tracking places I've eaten at",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.57.1",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-cypress": "^2.15.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.0",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.5",
        "typescript": "^5.6.3"
    },
    "scripts": {
        "install-all": "cd backend && npm install && cd ../frontend && npm install && cd ../",
        "backend": "cd backend && npm run start:dev",
        "frontend": "cd frontend && npm run dev",
        "test:backend": "cd backend && npm run test",
        "test:frontend:components": "cd frontend && npm run test:components",
        "test:frontend:e2e": "cd frontend && npm run test:e2e",
        "lint": "eslint . --ext ts,js,jsx --report-unused-disable-directives --max-warnings 0"
    },
    "license": "ISC"
}
