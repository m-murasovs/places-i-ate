{
    "name": "node-docker-app-backend",
    "private": true,
    "version": "1.0.0",
    "description": "Backend for a Node and Docker app",
    "author": "m-murasovs",
    "license": "MIT",
    "main": "index.cjs",
    "keywords": [
        "nodejs",
        "bootstrap",
        "express"
    ],
    "scripts": {
        "start": "tsx index.ts",
        "dev": "nodemon --exec \"npm run start\"",
        "renameIndex": "mv index.js index.cjs",
        "build": "npx tsc index.ts && npm run renameIndex",
        "lint": "eslint \"./**/*.ts\"",
        "lint:fix": "eslint \"./**/*.ts\" --fix"
    },
    "dependencies": {
        "apollo-server": "^3.13.0",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "express-graphql": "^0.12.0",
        "graphql": "^15.3.0",
        "pg": "^8.13.1",
        "sequelize": "^6.37.5"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/node": "^22.7.8",
        "@types/sequelize": "^4.28.20",
        "@typescript-eslint/eslint-plugin": "^8.12.2",
        "@typescript-eslint/parser": "^8.12.2",
        "nodemon": "^3.1.7",
        "ts-node": "^10.9.2",
        "tsc": "^2.0.4",
        "typescript": "^5.6.3"
    }
}
